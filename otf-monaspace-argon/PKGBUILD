_name=monaspace
pkgbase=$_name-font
pkgname=otf-$_name-argon
pkgver=1.200
pkgrel=1
arch=(any)
url="https://github.com/githubnext/$_name"
license=(OFL)
_archive="$_name-v$pkgver"
source=("$url/releases/download/v$pkgver/$_archive.zip")
sha256sums=('SKIP')

package_otf-monaspace() {
	provides=("$pkgbase")
	cd "$_archive"
	install -Dm0644 -t "$pkgdir/usr/share/fonts/OTF/" fonts/otf/MonaspaceArgon-*.otf
	install -Dm0644 -t "$pkgdir/usr/share/licenses/$pkgname/" LICENSE
}
